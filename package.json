{
  "name": "excel-plugin",
  "displayName": "ExcelPlugin",
  "description": "Excel文件编辑器 - 支持在VS Code中编辑Excel文件，双向绑定表单与编辑器",
  "version": "1.0.2",
  "publisher": "zhaoxuandong",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other",
    "Formatters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onView:excelPlugin.sidebar",
    "onCommand:excelPlugin.toggleStatus",
    "onCommand:excelPlugin.openExcel",
    "onCommand:excelPlugin.addRow",
    "onCommand:excelPlugin.updateCell",
    "onCommand:excelPlugin.headerRowChanged",
    "onCommand:excelPlugin.currentRowChanged",
    "onCommand:excelPlugin.activate",
    "onCommand:excelPlugin.deactivate",
    "onLanguage:plaintext"
  ],
  "main": "./out/ExcelExtension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "excel-plugin",
          "title": "ExcelPlugin",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "excel-plugin": [
        {
          "type": "webview",
          "id": "excelPlugin.sidebar",
          "name": "ExcelPlugin",
          "icon": "media/icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "excelPlugin.openExcel",
        "title": "打开Excel文件",
        "category": "ExcelPlugin"
      },
      {
        "command": "excelPlugin.toggleStatus",
        "title": "切换Excel编辑器状态",
        "category": "ExcelPlugin"
      },
      {
        "command": "excelPlugin.addRow",
        "title": "添加新行",
        "category": "ExcelPlugin"
      },
      {
        "command": "excelPlugin.updateCell",
        "title": "更新单元格",
        "category": "ExcelPlugin"
      },
      {
        "command": "excelPlugin.headerRowChanged",
        "title": "表首行变化",
        "category": "ExcelPlugin"
      },
      {
        "command": "excelPlugin.currentRowChanged",
        "title": "当前行变化",
        "category": "ExcelPlugin"
      },
      {
        "command": "excelPlugin.showSidebar",
        "title": "显示Excel编辑器侧边栏",
        "category": "ExcelPlugin"
      },
      {
        "command": "excelPlugin.hideSidebar",
        "title": "隐藏Excel编辑器侧边栏",
        "category": "ExcelPluginr"
      },
      {
        "command": "excelPlugin.activate",
        "title": "激活Excel编辑器",
        "category": "ExcelPlugin"
      },
      {
        "command": "excelPlugin.deactivate",
        "title": "关闭Excel编辑器",
        "category": "ExcelPlugin"
      }
    ],
    "keybindings": [
      {
        "command": "excelPlugin.toggleStatus",
        "key": "ctrl+0",
        "mac": "cmd+0",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "ExcelPlugin",
      "properties": {
        "excelPlugin.autoLoad": {
          "type": "boolean",
          "default": true,
          "description": "是否在打开Excel文件时自动加载"
        },
        "excelPlugin.sync.headerToForm": {
          "type": "boolean",
          "default": true,
          "description": "同步1：表首行值修改 → 实时同步渲染表单项（表头）"
        },
        "excelPlugin.sync.editorToForm.lessThan": {
          "type": "boolean",
          "default": true,
          "description": "同步3：表首行值 < 光标所在行值 → 编辑器 ↔ 表单项双向同步"
        },
        "excelPlugin.sync.editorToForm.equal": {
          "type": "boolean",
          "default": true,
          "description": "同步4：表首行值 = 光标所在行值 → 编辑器 ↔ 表单项双向同步"
        },
        "excelPlugin.sync.editorToForm.greaterThan": {
          "type": "boolean",
          "default": true,
          "description": "同步5：表首行值 > 光标所在行值 → 编辑器 ↔ 表单项双向同步"
        },
        "excelPlugin.sync.formToHeader": {
          "type": "boolean",
          "default": true,
          "description": "同步6：表首行值 = 光标所在行值 → 表单项修改 → 同步到表头"
        },
        "excelPlugin.sync.cursorRowToCurrentRowInput": {
          "type": "boolean",
          "default": true,
          "description": "同步2：光标所在行变动 → 实时同步到当前行输入框"
        },
        "excelPlugin.sync.currentRowInputToCursor": {
          "type": "boolean",
          "default": true,
          "description": "同步2：当前行输入框值变化 → 实时同步光标位置（移到行首）"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "excelPlugin.toggleStatus",
          "when": "view == excelPlugin.sidebar",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@types/xlsx": "^0.0.35",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "keywords": [
    "excel",
    "spreadsheet",
    "editor",
    "xlsx",
    "xls",
    "csv",
    "form"
  ],
  "icon": "media/icon.png",
  "files": [
    "media/*",
    "out/**/*.js",
    "webview/**/*.{html,css,js}",
    "package.json",
    "README.md"
  ],
  "galleryBanner": {
    "color": "#4CAF50",
    "theme": "dark"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/2095596768/excel-plugin.git"
  }
}
